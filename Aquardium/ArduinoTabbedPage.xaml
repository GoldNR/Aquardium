<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aquardium.ArduinoTabbedPage"
             Title="Arduino">
    <TabbedPage.Children>
        <!-- Sensors tab -->
        <ContentPage Title="Sensors">
            <ScrollView>
                <VerticalStackLayout Padding="20" Spacing="20">
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                        <Label  Text="Status:"              FontSize="16"       Grid.Column="0"     VerticalOptions="Center"/>
                        <Label  Text="{Binding Status}"     FontSize="16"       Grid.Column="1"     VerticalOptions="Center"    x:Name="StatusValue"/>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                        <Label  Text="Temperature:"         FontSize="16"       Grid.Column="0"     VerticalOptions="Center"/>
                        <Label  Text="-- &#176;C"           FontSize="16"       Grid.Column="1"     VerticalOptions="Center"    x:Name="TemperatureValue"/>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                        <Label  Text="Water Quality:"       FontSize="16"       Grid.Column="0"     VerticalOptions="Center"/>
                        <Label  Text="--"                   FontSize="16"       Grid.Column="1"     VerticalOptions="Center"    x:Name="TurbidityValue"/>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                        <Label  Text="Time Last Fed:"       FontSize="16"       Grid.Column="0"     VerticalOptions="Center"/>
                        <Label  Text="--"                   FontSize="16"       Grid.Column="1"     VerticalOptions="Center"    x:Name="TimeValue"/>
                    </Grid>
                </VerticalStackLayout>
            </ScrollView>
        </ContentPage>

        <!-- Controls tab -->
        <ContentPage Title="Controls">
            <ScrollView>
                <VerticalStackLayout Padding="20" Spacing="20">
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                        <Label  Text="Simulate Arduino"      FontSize="16"       Grid.Column="0"     VerticalOptions="Center"/>
                        <Button Text="Simulate Arduino"      FontSize="16"       Grid.Column="1"     VerticalOptions="Center" Clicked="OnSimulateArduino"/>
                    </Grid>
                    <Grid ColumnDefinitions="Auto, *, *, Auto" VerticalOptions="Center">
                        <Label
                           Text="Set feeder time" 
                           FontSize="16"
                           VerticalOptions="Center"
                           Grid.Column="0"/>
                        <Button 
                           Text="Set Feed Time"
                           Clicked="OnSetFeederTimeClicked"
                           Grid.Column="3"/>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                        <Label  Text="Feed Now"      FontSize="16"       Grid.Column="0"     VerticalOptions="Center"/>
                        <Button Text="Feed Now"      FontSize="16"       Grid.Column="1"     VerticalOptions="Center" Clicked="OnFeedNowClicked"/>
                    </Grid>
                </VerticalStackLayout>
            </ScrollView>
        </ContentPage>
    </TabbedPage.Children>
</TabbedPage>