<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Aquardium.FeederTimePopup"
    x:TypeArguments="x:String"
    WidthRequest="275"
    HeightRequest="200"
    Padding="20"
    BackgroundColor="#2C2C2E">

    <VerticalStackLayout Spacing="15">
        <Label Text="Set Feeder Time" FontSize="20" HorizontalOptions="Center" />

        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Entry x:Name="HourEntry" Placeholder="HH" Keyboard="Numeric" WidthRequest="60"/>
            <Entry x:Name="MinuteEntry" Placeholder="MM" Keyboard="Numeric" WidthRequest="60"/>
            <Picker x:Name="PeriodPicker" WidthRequest="60">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>AM</x:String>
                        <x:String>PM</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </HorizontalStackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Empty space filler -->
            <BoxView
                Grid.Column="0"
                BackgroundColor="Transparent"/>
            
            <!-- Save Button -->
            <Button 
                Text="Save"
                TextColor="White"
                Clicked="OnSaveClicked" 
                Grid.Column="2"
                BackgroundColor="Transparent"
                BorderColor="Transparent"
                Padding="10,5"
                />

            <!-- Cancel Button -->
            <Button 
                Text="Cancel" 
                TextColor="White"
                Clicked="OnCancelClicked" 
                Grid.Column="1"
                BackgroundColor="Transparent"
                BorderColor="Transparent"
                Padding="10,5"
                />
        </Grid>
    </VerticalStackLayout>
</toolkit:Popup>
